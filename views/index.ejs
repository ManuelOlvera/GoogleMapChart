<!DOCTYPE html>
<html>
  <head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['geochart']});
      google.charts.setOnLoadCallback(drawRegionsMap);

      function drawRegionsMap() {
        var map = <%- JSON.stringify(map) %>
        console.log('map', map);
        var data = google.visualization.arrayToDataTable(map);
        var options = {
          colorAxis: {colors: ['#F5F5F5', '#00853f', '#e31b23']},
          backgroundColor: '#81d4fa'
        };
        var chart = new google.visualization.GeoChart(document.getElementById('regions_div'));
        chart.draw(data, options);
      }
    </script>
    <style>
      ul li {
        display:inline;
      }
    </style>
  </head>
  <body>
    <ul>
      <li><a href="/map/manuel">Manuel</a></li>
      <li><a href="/map/chau">Chau</a></li>
      <li><a href="/map">Both</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
    <div id="regions_div" style="width: 900px; height: 500px;"></div>
    <form method="POST" action="/api/map">
      <select id="person" name="person">
        <option value="manuel">Manuel</option>
        <option value="chau">Chau</option>
      </select>
      <input type="text" id="country" name="country"/>
      <button type="submit">Send Country</button>
    </form>
  </body>
</html>
